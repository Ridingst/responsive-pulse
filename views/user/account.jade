extends /layouts/auth_base

include /partials/formcomponents

block content
    main
        section
            .row
                .card.card-full.card--spacious
                    .card-body
                        .card-row
                            +form-group(true)(action="/account")
                                h3 Basic Information
                                +input-text("name", null, user.profile.name || "", "Name", true)(required="")
                                +input-text("organization", null, user.profile.organization || "", "Organization", true)(required="")
                                +input-email("email", null, user.email, "E-mail", true)(required="")
                                +input-password("password", null, "", "Password", true)
                                input(type="hidden", name="_csrf", value=csrfToken)
                                +form-buttons
